<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PapDocAuth</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">PapDocAuth</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/verify">Verify</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/About">About</a>
              </li>
          </ul>
        </div>
    </div>
    </nav>
    
  <div class="container">

    <div class="upload">
      <div class="row g-5">
        <div class="col-6">
          <div class="p-3">
            <h3>Upload Your Scanned Document</h3>
            <p><i>*Supported Formats: PDF, JPEG, PNG</i></p>
            <form action="/verifyupload" method="post" enctype="multipart/form-data">
              <input class="form-control" type="file" name="file" id="verifyfileUpload" required>
              <br>
              <button type="submit" class="btn btn-warning btn-secondary">Verify</button>
          </form>





          <!-- ++++++++++++++ SHOW OUTPUT HERE ++++++++++++++++ -->
          <div class="output">
            <% if (typeof status === 'undefined') { %>
              <!-- DO NOTHING -->
            <% } else if (status === -1) { %>
              <div class="alert alert-danger" role="alert">
                Verification failed. The uploaded document is not authentic!
              </div>
            <% } else if (status === 1) { %>
              <div class="alert alert-success" role="alert">
                Verification successful!
              </div>
              
              <div class="accordion accordion-flush" id="accordionFlushExample">
                
                <% if (typeof hashValue !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseHashValue" aria-expanded="false" aria-controls="flush-collapseHashValue">
                        <strong>Hash Value</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseHashValue" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= hashValue %></div>
                    </div>
                  </div>
                <% } %>
          
                <% if (typeof name !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseName" aria-expanded="false" aria-controls="flush-collapseName">
                        <strong>Issuer's Name</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseName" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= name %></div>
                    </div>
                  </div>
                <% } %>
          
                <% if (typeof email !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseEmail" aria-expanded="false" aria-controls="flush-collapseEmail">
                        <strong>Issuer's Email</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseEmail" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= email %></div>
                    </div>
                  </div>
                <% } %>
          
                <% if (typeof documentDetails !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseDocumentDetails" aria-expanded="false" aria-controls="flush-collapseDocumentDetails">
                        <strong>Document Details</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseDocumentDetails" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= documentDetails %></div>
                    </div>
                  </div>
                <% } %>
          
                <% if (typeof intendedAudiences !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseIntendedAudiences" aria-expanded="false" aria-controls="flush-collapseIntendedAudiences">
                        <strong>Intended Audiences</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseIntendedAudiences" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= intendedAudiences %></div>
                    </div>
                  </div>
                <% } %>
          
                <% if (typeof additionalInformation !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseAdditionalInformation" aria-expanded="false" aria-controls="flush-collapseAdditionalInformation">
                        <strong>Additional Information</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseAdditionalInformation" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= additionalInformation %></div>
                    </div>
                  </div>
                <% } %>
          
                <% if (typeof date !== 'undefined') { %>
                  <div class="accordion-item">
                    <h2 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseDate" aria-expanded="false" aria-controls="flush-collapseDate">
                        <strong>Date of Issue for Authentication</strong>
                      </button>
                    </h2>
                    <div id="flush-collapseDate" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body"><%= date %></div>
                    </div>
                  </div>
                <% } %>
          
              </div>
            <% } %>
          </div>
          
          
          
          




          </div>
        </div>
        <div class="col-6">
          <div class="uploadedBox text-center p-3">
            <h3>Preview</h3> <br>
            <% if (typeof imageUrl !== 'undefined') { %>
              <img class="rounded mx-auto d-block" src="<%= imageUrl %>" alt="Uploaded Image" style="max-width: 300px;"> <br>
              
              <p class="text-secondary"><i>*Preview of the uploaded content will be showed here</i></p>

              <% } else {%>
              <img class="rounded mx-auto d-block" src="./images/imagePlaceholder.jpg" alt="black image" style="max-width: 300px;"> <br>
              <p class="text-secondary"><i>*Preview of the uploaded content will be showed here</i></p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    


    
    
    

  </div>







    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="javascript/index.js"></script>
  </body>
</html>