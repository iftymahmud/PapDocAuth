<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PapDocAuth</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    
  <div class="container">

    <div class="upload">
      <div class="row g-5">
        <div class="col-6">
          <div class="p-3">
            <h3>Upload Your Scanned Document</h3>
            <p><i>*Supported Formats: PDF, JPEG, PNG</i></p>
            <form action="/upload" method="post" enctype="multipart/form-data">
              <input class="form-control" type="file" name="file" id="fileUpload" required>
              <br>
              <button type="submit" class="btn btn-secondary">Upload</button>
          </form>
          </div>
        </div>
        <div class="col-6">
          <div class="uploadedBox text-center p-3">
            <h3>Preview</h3> <br>
            <% if (typeof imageUrl !== 'undefined') { %>
              <img class="rounded mx-auto d-block" src="<%= imageUrl %>" alt="Uploaded Image" style="max-width: 300px;"> <br> <br>
              <% } else {%>
              <img class="rounded mx-auto d-block" src="./uploads/imagePlaceholder.jpg" alt="black image" style="max-width: 300px;"> <br>
              <p class="text-secondary"><i>*Preview of the uploaded content will be showed here</i></p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    






  </div>










    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  </body>
</html>